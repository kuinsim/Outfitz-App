<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d54444"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/bogo2"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:scaleType="centerCrop"
            android:src="@drawable/outfitz_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtEmailRegistration"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/textinputborder"
            android:ems="10"
            android:hint="E-mail Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/txtPasswordRegistration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/txtPasswordRegistration"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/textinputborder"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/registerButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/txtNameRegistration"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/textinputborder"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/txtEmailRegistration"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginBottom="210dp"
            android:background="@drawable/buttons"
            android:onClick="btnRegisterUser_Click"
            android:text="Register"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>